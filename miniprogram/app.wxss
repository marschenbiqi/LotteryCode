.img-container {
  width: 100%;
  height: 450rpx;
}

.img-container image {
  height: 100%;
  width: 100%;
}

.text-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
}

.headline {
  margin: 40rpx 0 15rpx;
}

.btn-container {
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-container button {
  width: 300rpx;
  height: 300rpx;
  margin: 30rpx 0;
  border-radius: 50%;
  background: #e94f5c;
  line-height: 300rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}

.btn-container button::after {
  border: none;
}

.hint-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.hint-container text {
  font-size: 30rpx;
  color: #363636;
  margin: 15rpx 0;
}
