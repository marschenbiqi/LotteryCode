.number-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 350rpx;
  background: #e94f5c;
}

.number-container text {
  font-size: 50rpx;
  font-weight: bold;
  margin: auto 0;
  letter-spacing: 30rpx;
  color: #fff;
}

.btn-container button {
  width: 250rpx;
  height: 250rpx;
  margin: 30rpx 0;
  border-radius: 50%;
  background: #e94f5c;
  line-height: 250rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
}
